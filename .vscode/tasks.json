{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "C/C++: clang build active file and RUN",
			"command": "/usr/bin/clang",
			"args": [
				"-fdiagnostics-color=always",
				"-o",
				"${fileDirname}/../bin/${fileBasenameNoExtension}.out",
				"${file}",

				// Arguments
				"${fileDirname}/loader.c",
				
				// Running codes
				"&&",
				"${fileDirname}/../bin/${fileBasenameNoExtension}.out",
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "compiler: /usr/bin/clang"
		}
	]
}